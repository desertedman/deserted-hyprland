        // "format-bluetooth-muted": "Ôö© {volume}% Ôäî",
        "format-muted": "<b>Ôö©</b> {volume}%",
        // "format-source": "{volume}% ÔÑ∞",
        // "format-source-muted": "ÔÑ±",

        // Audio device
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",

            "default": [
