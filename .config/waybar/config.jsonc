// -*- mode: jsonc -*-
{
    // "height": 38, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        // "clock",
        "mpris",
        "hyprland/window"
    ],
    "modules-center": [
        // "mpris",
        "hyprland/workspaces"
    ],
    "modules-right": [
        // "idle_inhibitor",
        "tray",
        "pulseaudio",
        "bluetooth",
        "network",
        "battery",
        "power-profiles-daemon",
        // "battery#bat2",
        "clock",
        "custom/power"
    ],
    // Modules configuration
    "hyprland/window": {
        // "format": "{title}"
    },
    "hyprland/workspaces": {
        // "justify": "center",
        "persistent-workspaces": {
            "*": 5 // 5 workspaces by default
        }
    },
    "mpris": {
        "player": "spotify",
        "format": "{status_icon} <b>{dynamic}</b>",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "format-stopped": "None",
        "status-icons": {
            "playing": "‚è∏",
            "paused": "‚ñ∂"
        },
        "dynamic-len": 30,
        "interval": 1
    },
    // "bluetooth:" {
        
    // },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        // "show-passive-items": true,
        "spacing": 10
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        "timezone": "America/Los_Angeles",
        "format": "<b>{:%I:%M %p}</b>",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%a, %b %d %Y}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Ôù´",
            "Ôãâ",
            "Ôù©"
        ]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": [
            "Óéç",
            "Óèì",
            "Óèë",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèä",
            "Óèà",
            "Óéõ"
        ]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "<b>{icon} {capacity}%</b>",
        "format-full": "<b>{icon} {capacity}%</b>",
        "format-charging": "<b>Ôóß {capacity}%</b>",
        "format-plugged": "<b>Ôá¶ {capacity}%</b>",
        // "format-alt": "<b>{icon} {time}</b>",

        "format-good": "", // An empty format will hide the module
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´", // Wifi unicode symbol
        "format-ethernet": "Ôûñ", // Ethernet unicode symbol
        "tooltip-format": "{signalStrength}%",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "‚ö†"
        // "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "<b>{icon}  {volume}%</b>",
