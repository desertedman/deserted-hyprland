@theme "simple-tokyonight"

* {
    font: "JetBrains Mono 13";
}

entry {
    placeholder: "Type here...";
}

window {
    location: center;
    x-offset: 0px;
    y-offset: 0px;
    width: 30em;
    height: 25em;
}

element {
    children: [element-icon, element-text];
    spacing: 0em;
}

element-icon {
    size: 2.5em;
    padding: 0em 0.5em;
}